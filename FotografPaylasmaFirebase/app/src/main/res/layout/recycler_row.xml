<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recycler_row_kullanici_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Email"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:textColor="#0E08BD"/>

    <ImageView
        android:id="@+id/recycler_row_imageview"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_launcher_background"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/recycler_row_kullanici_yorum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="kullanici yorumu"
        android:textSize="18sp"
        android:textColor="#293673"
        android:layout_margin="5dp"/>

</LinearLayout>